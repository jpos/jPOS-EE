#!/bin/sh

cd `dirname $0`/.. || exit 1
rm -f deploy/shutdown.xml
exec java -server \
    -Xmx1G \
    -Xloggc:log/gc.log \
    -XX:+PrintGCDetails \
    -XX:+PrintGCDateStamps \
    -XX:+UseGCLogFileRotation \
    -XX:NumberOfGCLogFiles=5 \
    -XX:GCLogFileSize=2M \
    -XX:NumberOfGCLogFiles=5 \
    -Djava.net.preferIPv4Stack=true \
    -Dcom.sun.management.jmxremote \
    -jar jposee-@jarname@ --pid-file='jpos.pid' "$@"

