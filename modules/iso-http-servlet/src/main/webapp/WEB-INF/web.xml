<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>ISO HTTP Interface</display-name>

	<!-- For Simple Servlet -->
    <servlet>
        <servlet-name>HttpTransactionServlet</servlet-name>
        <servlet-class>org.jpos.http.service.HttpTransactionServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>HttpTransactionServlet</servlet-name>
        <url-pattern>/iso/*</url-pattern>
    </servlet-mapping>
    
</web-app>