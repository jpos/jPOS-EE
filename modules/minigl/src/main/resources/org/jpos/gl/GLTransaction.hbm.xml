<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="org.jpos.gl.GLTransaction" table="transacc">
    <id name="id" column="id" type="long">
      <generator class="native" />
    </id>

    <property name="detail" type="string" length="4096" />
    <property name="tags"  type="org.jpos.ee.usertype.TagsType">
      <column name="tags" sql-type="varchar(255)" not-null="false" />
    </property>
    <property name="timestamp" type="timestamp">
     <column name="timestamp" not-null="true"
        index="timestamp"/>
    </property>
    <property name="postDate"  type="timestamp">
     <column name="postDate" not-null="false"
        index="postDate"/>
    </property>

    <many-to-one name="journal" column="journal" not-null="true" foreign-key="FKTransactionJournal" />

    <list name="entries" cascade="all,delete-orphan" lazy="true">
     <key column="transaction" />
     <list-index column="posn" />
     <one-to-many class="org.jpos.gl.GLEntry" />
    </list>

      <fetch-profile name="eager">
          <fetch association="entries" style="join"/>
      </fetch-profile>
  </class>
</hibernate-mapping>
