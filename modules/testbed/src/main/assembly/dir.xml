<assembly>
  <id>dir</id>
  <formats>
    <format>dir</format>
  </formats>
  <baseDirectory>/</baseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>cfg/*.xml</include>
        <include>cfg/*.ks</include>
        <include>cfg/*.bsh</include>
        <include>cfg/context/*.xml</include>
        <include>deploy/*.xml</include>
        <include>log/*</include>
        <include>webapps/**</include>
      </includes>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>target/${artifactId}-${project.version}.jar</source>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>src/main/resources/bin/q2</source>
      <outputDirectory>/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/resources/bin/bsh</source>
      <outputDirectory>/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/resources/bin/start</source>
      <outputDirectory>/bin</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/main/resources/bin/stop</source>
      <outputDirectory>/bin</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
  </files>
</assembly>

